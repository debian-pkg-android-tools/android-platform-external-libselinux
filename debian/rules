#!/usr/bin/make -f

export UPSTREAM_LIBVERSION = 5.1.1.8
UPSTREAM_TAG = 5.1.1_r8
UPSTREAM_VERSION = 5.1.1+r8

%:
	dh $@

override_dh_auto_build:
	make -C src -f ../debian/Makefile

override_dh_auto_clean:
	dh_auto_clean
	make -C src clean -f ../debian/Makefile

get-orig-source:
	wget https://android.googlesource.com/platform/external/libselinux/+archive/$(UPSTREAM_TAG).tar.gz
	mv $(UPSTREAM_TAG).tar.gz ../android-platform-external-libselinux_$(UPSTREAM_VERSION).orig.tar.gz